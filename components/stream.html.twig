{% extends 'base.html.twig' %}

{% block content %}

    <script>
        $('document').ready(function(){
            $('#commentsright').height($('#streamleft').height());
        });


        $(window).on('load', function(){
          var video = document.getElementById('video');

          if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
            navigator.mediaDevices.getUserMedia({video: true}).then(function(stream){
              video.src = window.URL.createObjectURL(stream);
              video.play();
            });
          }
        });
    </script>

    <div class="row">

        <div class="col s8 card blue-grey darken-2 z-depth-5" id="streamleft">

            <h1 class="card-title white-text">{{ stream.name }}</h1>

            <div class="card-content">

            <video id="video" width="640" height="480" autoplay></video>

            </div>

        </div>

        <div class="col s4 card blue-grey z-depth-5">

            <div id="commentsright">
                {# TODO #}
            </div>

        </div>

    </div>

{% endblock %}
