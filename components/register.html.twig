{% extends 'base.html.twig' %}

{% block content %}

{% if error != false %}

  <div class="card-panel red darken-4">
    {{error}}<br>nom : {{nom}} <br> prenom : {{prenom}} <br> email : {{email}} <br> identifiant : {{id}} <br> pass : {{pass}}
  </div>
{% endif %}

  <div class="row">
    <form action="register" method="post" class="col s12">
      <div class="row">
        <div class="input-field col s2">
          <input placeholder="Placeholder" id="nom" type="text" class="validate" name="nom">
          <label for="nom">Nom</label>
        </div>
        <div class="input-field col s2">
          <input id="identifiant" type="text" class="validate" name="identifiant">
          <label for="identifiant">Identifiant</label>
        </div>
        <div class="input-field col s2">
          <input id="email" type="email" class="validate" name="email">
          <label for="email">E-Mail</label>
        </div>
      </div>
      <div class="row">
          <div class="input-field col s2">
            <input id="prenom" type="text" class="validate" name="prenom">
            <label for="prenom">Pr√©nom</label>
          </div>
          <div class="input-field col s2">
            <input id="password" type="password" class="validate" name="password">
            <label for="password">Mot de Passe</label>
          </div>
      </div>
      <div class="row">
        {# Faire un date picker en JS #}
        <button class="btn waves-effect waves-light" name="register">S'inscrire</button>
      </div>
    </form>
  </div>



{% endblock %}
