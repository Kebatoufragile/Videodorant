<!DOCTYPE html>


<html lang="en">

<head>
    <meta charset="utf-8"/>
    <title>{% block title %}Videodorant{% endblock %}</title>

    {% block imports %}
        <!--Import Google Icon Font-->
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link type="text/css" rel="stylesheet" href="../components/materialize/css/materialize.min.css"  media="screen,projection"/>
    {% endblock %}

</head>

<body>
<!--Import jQuery before materialize.js-->
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="../components/materialize/js/materialize.min.js"></script>

{% block navbar %}
    <nav>
        <div class="nav-wrapper blue darken-4">
            <a href="#" class="brand-logo" style="margin-left:30px">Vidéodorant</a>
            <form class="right" style="width:80%">
                <div class="input-field">
                    <input id="search" type="search" required>
                    <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                    <i class="material-icons">close</i>
                </div>
            </form>

        </div>
    </nav>

    <ul id="slide-out" class="side-nav">
        <li><div class="userView">
                <div class="background">
                    <img src="img/backgrounddefault.jpg">
                </div>
                <a href="#"><img class="circle" src="img/profiledefault.png"></a>
                <a href="#"><span class="white-text name">Sébastien Dupuis</span></a>
                <a href="#"><span class="white-text email">sebastien.dupuis@gmail.com</span></a>
            </div></li>
        <li><a href="#" class="waves-effect"><i class="material-icons">home</i>Accueil</a></li>
        <li><a href="#"><i class="material-icons">account_circle</i>Compte</a></li>
        <li><div class="divider"></div></li>
        <li><a class="waves-effect" href="#"><i class="material-icons">search</i>Recherche</a></li>
    </ul>
    <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>

    <script>$('.button-collapse').sideNav({
                    menuWidth: 300,
                    edge: 'left',
                    closeOnClick: true,
                    draggable: true
        });
    </script>

{% endblock %}

{% block content %}

{% endblock %}

</body>

</html>
