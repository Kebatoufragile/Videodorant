{% extends 'base.html.twig' %}


{% block content %}

  <div class="container">

    <div class="row">
      <div class="col s12 m4 l2">
        <p>Videodorant</p>
      </div>
    </div>

<form action="login" method="post">
    <div class="row">
      <div class="col s2 offset-s2">
        <input type="email" name="email" placeholder="exemple: abc@xyz.com" required />
      </div>
      <div class="col s2 offset-s2">
        <input type="password" name="password" placeholder="choose a password" required />
      </div>
    </div>

    <div class="row">
      <div class="col s2 offset-s4">
        <input type="submit"/>
      </div>
    </div>
</form>

</div>

{% endblock %}
