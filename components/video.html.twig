{% extends 'base.html.twig' %}

{% block content %}

    <script>
        $('document').ready(function(){
            $('#commentsright').height($('#streamleft').height());
        });
    </script>

    <div class="row">

        <div class="col s8 card blue-grey darken-2 z-depth-5" id="streamleft">

            <h1 class="card-title white-text">{{ video.title }}</h1>

            <div class="card-content">
                <video controls width="80%" >
                    <source src="../public/assets/media/{{ video.link }}" type="video/mp4"/>
                </video>
            </div>

        </div>

        <div class="col s4 card blue-grey z-depth-5">

            <div id="commentsright">
                {# TODO #}
            </div>

        </div>

    </div>


{% endblock %}