{% extends 'base.html.twig' %}

{% block content %}

    <script>
        $('document').ready(function(){
            $('#commentsright').height($('#streamleft').height());
        });
    </script>

    <div class="row">

        <div class="col s8 card blue-grey darken-2 z-depth-5" id="streamleft">

            <h1 class="card-title white-text">{{ stream.name }}</h1>

            <div class="card-content">


                {#<video controls width="80%" >
                    <source src=":8554/{{idStream}}" type="video/mp4"/>
                  </video>#}




                <OBJECT classid="clsid:9BE31822-FDAD-461B-AD51-BE1D1C159921"
                        codebase="http://downloads.videolan.org/pub/videolan/vlc/latest/win32/axvlc.cab"
                        width="640" height="480" id="vlc" events="True">
                    <param name="src" value="rtsp://localhost:8554/{{idStream}}" />
                    <param name="ShowDisplay" value="True" />
                    <param name="AutoLoop" value="False" />
                    <param name="AutoPlay" value="True" />
                    <embed id="vlcEmb"  type="video/x-m4v" version="VideoLAN.VLCPlugin.2" autoplay="yes" loop="no" width="640" height="480"
                           target="rtsp://localhost:8554/{{idStream}}" ></embed>
                </OBJECT>

            </div>

        </div>

        <div class="col s4 card blue-grey z-depth-5">

            <div id="commentsright">
                {# TODO #}
            </div>

        </div>

    </div>



{% endblock %}
